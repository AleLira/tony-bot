{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "lib": [
      "ESNext"
    ],
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    ".git"
  ],
  "ts-node": {
    "files": true
  }
}